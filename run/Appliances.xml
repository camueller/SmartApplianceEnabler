<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Appliances xmlns="http://github.com/camueller/SmartApplianceEnabler/v2.0">
    <Appliance id="F-00000001-000000000008-00">
        <StartingCurrentSwitch>
            <HttpSwitch>
                <HttpWrite url="http://tasmota/cm?cmnd=Power%20On">
                    <HttpWriteValue name="On"/>
                </HttpWrite>
                <HttpWrite url="http://tasmota/cm?cmnd=Power%20Off">
                    <HttpWriteValue name="Off"/>
                </HttpWrite>
                <HttpRead url="http://tasmota/cm?cmnd=Power">
                    <HttpReadValue name="On" extractionRegex=":.ON"/>
                </HttpRead>
            </HttpSwitch>
        </StartingCurrentSwitch>
        <!--MqttElectricityMeter topic="tele/tasmota/SENSOR" name="Energy" path="$.ENERGY.Total" timePath="$.Time"-->
        <MqttElectricityMeter topic="tele/tasmota/SENSOR" name="Power" path="$.ENERGY.Power" timePath="$.Time">
            <Notifications/>
        </MqttElectricityMeter>
        <Schedule enabled="true">
            <RuntimeRequest min="0" max="300"/>
            <DayTimeframe>
                <Start hour="4" minute="0" second="0"/>
                <End hour="20" minute="0" second="0"/>
            </DayTimeframe>
        </Schedule>
    </Appliance>
    <Connectivity>
        <MqttBroker host="raspi2" port="1883"/>
    </Connectivity>
</Appliances>
