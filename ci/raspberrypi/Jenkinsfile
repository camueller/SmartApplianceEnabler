pipeline {
    agent { label 'raspi2' }

    environment {
        VERSION = readMavenPom().getVersion()
        DOCKER_TAG = "${env.BETA_RELEASE == "true" ? "beta" : "latest"}"
    }

    stages {
        stage('Publish-arm') {
            steps {
                dir('docker') {
                    sh 'rm -f sae-arm32/*.war'
                    sh 'mv ../../../SmartApplianceEnabler-"$VERSION".war sae-arm32/'
                    sh "sed -i 's#@project.version@#'\"$VERSION\"'#' ./sae-arm32/Dockerfile"
                    sh "docker build --tag=avanux/smartapplianceenabler:arm ./sae-arm32"
                    sh "git reset --hard" /* revert changes on Dockerfile */
                }
                withCredentials([usernamePassword(credentialsId: 'docker', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh "echo $PASSWORD | docker login --username $USERNAME --password-stdin"
                    dir('docker') {
                        sh "docker push avanux/smartapplianceenabler:arm"
                    }
                }

            }
        }
    }
}
